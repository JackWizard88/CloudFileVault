<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="400.0" minWidth="600.0" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.krilov.clientNIO.Controllers.WorkScreenController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#exit" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <HBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <HBox>
                     <children>
                        <TextField fx:id="localPathField" editable="false" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </TextField>
                        <Button fx:id="btnLocalUp" focusTraversable="false" mnemonicParsing="false" onAction="#localUp" prefWidth="80.0" text="Вверх" />
                     </children>
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </HBox>
                  <TableView fx:id="localTable" prefWidth="550.0" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>
            <VBox alignment="CENTER" fillWidth="false" maxHeight="80.0" minWidth="50.0" prefWidth="80.0" spacing="20.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="btnCopyToServer" focusTraversable="false" mnemonicParsing="false" text="&gt;&gt;" />
                  <Button fx:id="btnCopyFromServer" focusTraversable="false" mnemonicParsing="false" text="&lt;&lt;" />
                  <Button fx:id="btnDel" focusTraversable="false" mnemonicParsing="false" text="Del" />
                  <Button fx:id="btnRefresh" focusTraversable="false" layoutX="30.0" layoutY="405.0" mnemonicParsing="false" onAction="#update" text="Ref" />
               </children>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </VBox>
            <VBox>
               <children>
                  <HBox>
                     <children>
                        <TextField fx:id="serverPathField" editable="false" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </TextField>
                        <Button fx:id="btnServerUp" focusTraversable="false" mnemonicParsing="false" prefWidth="80.0" text="Вверх" />
                     </children>
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </HBox>
                  <TableView fx:id="serverTable" prefWidth="550.0" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="5.0" top="5.0" />
         </BorderPane.margin>
      </HBox>
   </center>
   <bottom>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <ProgressBar minHeight="20.0" minWidth="200.0" progress="0.0" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="0.0" />
            <TextField editable="false" minWidth="200.0" prefHeight="25.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="220.0" AnchorPane.topAnchor="0.0" />
         </children>
         <BorderPane.margin>
            <Insets left="5.0" />
         </BorderPane.margin>
      </AnchorPane>
   </bottom>
</BorderPane>
